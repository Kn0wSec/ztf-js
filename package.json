{
  "name": "ztf-js",
  "version": "1.0.0",
  "description": "Zero-Trust Framework for JavaScript full-stack applications",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:security": "npm run test:integration -- --testPathPattern=security",
    "benchmark": "node benchmarks/run-benchmarks.js",
    "lint": "eslint packages/*/src/**/*.ts examples/*/src/**/*.ts",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "dev": "concurrently \"npm run dev -w @ztf-js/policy-service\" \"npm run dev -w mern-example\"",
    "publish-packages": "npm run build && npm publish --workspaces --access public",
    "install-all": "npm install",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ztf-js/framework.git"
  },
  "keywords": [
    "zero-trust",
    "security",
    "javascript",
    "mern",
    "nextjs",
    "nestjs",
    "middleware",
    "authentication",
    "authorization"
  ],
  "author": "Kn0wSec",
  "license": "MIT"
}
